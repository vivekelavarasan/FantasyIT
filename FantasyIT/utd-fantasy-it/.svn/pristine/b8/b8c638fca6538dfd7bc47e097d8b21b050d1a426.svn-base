<Page x:Class="FITPrototype.CreateTeam"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="600"
	Title="ManageTeam">

    <Grid Background="#FF273B57">
        <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="40" Margin="10,10,0,0" VerticalAlignment="Top" Width="240" Background="#FF273B57">
            <TextBox Name ="teamName" HorizontalAlignment="Left" Height="30" Margin="5,5,0,0" TextWrapping="Wrap" Text="Enter Team Name Here" VerticalAlignment="Top" Width="220" FontSize="18"/>
        </Border>
        <DataGrid x:Name ="teamData" HorizontalAlignment="Left" Height="206" Margin="10,84,0,0" VerticalAlignment="Top" Width="216"/>
        <Button Content="Add." HorizontalAlignment="Left" Height="28" Margin="242,109,0,0" VerticalAlignment="Top" Width="105" Click="Button_Click"/>
        <Button Content="Remove" Click="Remove_Click" HorizontalAlignment="Left" Height="28" Margin="242,159,0,0" VerticalAlignment="Top" Width="105"/>
        <Button Content="Form Team" Click="FormTeam_Click" HorizontalAlignment="Left" Height="28" Margin="242,210,0,0" VerticalAlignment="Top" Width="105"/>
        <DataGrid x:Name ="team" HorizontalAlignment="Left" Height="206" Margin="364,84,0,0" VerticalAlignment="Top" Width="216"/>
        <TextBlock HorizontalAlignment="Left" Height="24" Margin="10,55,0,0" TextWrapping="Wrap" Text="Player Pool" VerticalAlignment="Top" Width="105" FontSize="16"/>
        <TextBlock HorizontalAlignment="Left" Height="24" Margin="364,55,0,0" TextWrapping="Wrap" Text="My Team" VerticalAlignment="Top" Width="105" FontSize="16"/>

    </Grid>
</Page>